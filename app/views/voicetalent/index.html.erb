<% if @user.nil? %>
  <h1> Dashboard not found </h1>
<% else %>
<h1>Voice Talent Dashboard for <%= @user.nickname %></h1>

<table id="tasks" class="table table-bordered table-striped ">
  <thead>
    <tr>
      <th>#</th>
      <th>Client</th>
      <th>Video Title</th>
      <th>Notes</th>
      <th>Due date</th>
      <th>Rush</th>
      <th>Rate</th>
      <th>Download</th>
      <th>Deliverable</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each_with_index do |task, index | %>
      <tr>
        <td class="col-md-1"><%= index + 1 %></td>
        <td class="col-md-2"><%= task.client.name %></td>
        <td class="col-md-4"><%= task.video_title %></td>
        <td class="col-md-3"><%= task.notes %></td>
        <td class="col-md-2"><%= task.mdy %></td>
        <td class="col-md-1"><%= task.rush_status %></td>
        <td><%= task.rate %></td>
        <td><%= task.script %></td>
        <td><%= task.deliverable %></td>
        <td><div class="text-center"><%= task.show_status %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<h1>Listing tasks</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Talen Name</th>
      <th>Client</th>
      <th>Video Title</th>
      <th>Notes</th>
      <th>Due date</th>
      <th>Rush</th>
      <th>Rate</th>
      <th>Script</th>
      <th>Deliverable</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each_with_index do |task, index | %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= task.voice_talent_user.first_name %></td>
        <td><%= task.client.name %></td>
        <td><%= task.video_title %></td>
        <td><%= task.notes %></td>
        <td><%= task.mdy %></td>
        <td><div class="text-center"><%= task.rush_status %></div></td>
        <td><%= task.rate %></td>
        <td><%= link_to tag(:span,  class: "glyphicon glyphicon-save text-primary"), task.script, :target => "_blank"%></td></td>
        <td><%= content_tag :div,  tag(:span, id: "up-#{task.id}",
                                       class: "#{task.download_icon}") %>
                <%= task.deliverable%></td>
        <td><%= content_tag(:div, tag(:span, class: "#{task.get_(:icon)} #{task.get_(:color)}") , class: "text-center") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%= image_tag "ribbon_admin.png", class: 'img-responsive center-block' %>
<br>
<% if iswriter? %>
  <%= link_to 'New Task', new_task_path %>
<% end %>

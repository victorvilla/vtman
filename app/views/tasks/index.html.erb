<h1>Listing tasks</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Talen Name</th>
      <th>Client</th>
      <th>Video Title</th>
      <th>Notes</th>
      <th>Due date</th>
      <th>Rush</th>
      <th>Rate</th>
      <th>Download</th>
      <th>Deliverable</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each_with_index do |task, index | %>
      <tr>
        <td><%= link_to index + 1, task %></td>
        <td><%= task.voice_talent_user.first_name %></td>
        <td><%= task.client.name %></td>
        <td><%= task.video_title %></td>
        <td><%= task.notes %></td>
        <td><%= task.mdy %></td>
        <td><%= task.rush_status %></td>
        <td><%= task.rate %></td>
        <td><%= task.script %></td>
        <td><%= task.deliverable %></td>
        <td><%= task.show_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>

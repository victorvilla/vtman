<h1>Listing tasks</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Talen Name</th>
      <th>Client</th>
      <th>Video Title</th>
      <th>Notes</th>
      <th>Due date</th>
      <th>Rush</th>
      <th>Rate</th>
      <th>Download</th>
      <th>Deliverable</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each_with_index do |task, index | %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= task.vtn %></td>
        <td><%= task.client %></td>
        <td><%= task.video_title %></td>
        <td><%= task.notes %></td>
        <td><%= task.mdy %></td>
        <td><%= task.rush_status %></td>
        <td><%= task.rate %></td>
        <td></td>
        <td></td>
        <td><%= task.show_status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


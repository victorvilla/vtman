<div class="modal fade">
 <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(@voice_talent_user, html: { :class => 'form-horizontal', role: 'form'}, remote: true) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3 class="modal-title" id="myModalLabel">Edit Entry</h3>
        </div>
        <div class="modal-body">
          <div id="error_explanation" style="display:none;">
          </div>
          <%= render 'form', :f => f, :voice_talent_user => @voice_talent_user %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= f.submit 'Update', :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>